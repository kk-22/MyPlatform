<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#888888">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical">

            <TextView
                android:text="現在"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:singleLine="true"/>

            <TextView
                android:text="予定"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/current_time_text"
                android:text="24時59分59秒"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/schedule_time_text"
                android:text="24時59分59秒"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:singleLine="true"/>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/hour_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="0時"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="center_vertical|right"/>

            <TextView
                android:id="@+id/min_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="0分"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="center_vertical|right"/>

            <TextView
                android:id="@+id/sec_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="0秒"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="center_vertical|right"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="14"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.3"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <View
                    android:layout_width="1pt"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    />
                <Space
                    android:layout_weight="99"
                    android:layout_width="1pt"
                    android:layout_height="match_parent"
                    />
                <View
                    android:layout_width="1pt"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    />
                <Space
                    android:layout_weight="99"
                    android:layout_width="1pt"
                    android:layout_height="match_parent"
                    />
                <View
                    android:layout_width="1pt"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    />
                <Space
                    android:layout_weight="99"
                    android:layout_width="1pt"
                    android:layout_height="match_parent"
                    />
                <View
                    android:layout_width="1pt"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    />
                <Space
                    android:layout_weight="99"
                    android:layout_width="1pt"
                    android:layout_height="match_parent"
                    />
                <View
                    android:layout_width="1pt"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <SeekBar
                    android:progress="0"
                    android:max="8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/hour_seekBar"
                    android:layout_weight="1"/>

                <SeekBar
                    android:progress="0"
                    android:max="59"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/min_seekBar"
                    android:layout_weight="1"/>

                <SeekBar
                    android:progress="0"
                    android:max="59"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/sec_seekBar"
                    android:layout_weight="1"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center">

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="reset"
            android:id="@+id/reset_button"
            android:textSize="7dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <Button
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="-5"
                android:id="@+id/minus5_button"/>

            <Button
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="-1"
                android:id="@+id/minus1_button"/>

            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />

            <Button
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="+1"
                android:id="@+id/plus1_button"/>

            <Button
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="+5"
                android:id="@+id/plus5_button"/>
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>