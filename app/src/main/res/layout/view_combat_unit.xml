<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name_text"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/saved_hp_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/saved_attack_text"
        app:layout_constraintTop_toBottomOf="@id/name_text" />
    <TextView
        android:id="@+id/saved_attack_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/saved_hp_text"
        app:layout_constraintRight_toLeftOf="@id/saved_speed_text"
        app:layout_constraintTop_toBottomOf="@id/name_text" />
    <TextView
        android:id="@+id/saved_speed_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/saved_attack_text"
        app:layout_constraintRight_toLeftOf="@id/saved_defense_text"
        app:layout_constraintTop_toBottomOf="@id/name_text" />
    <TextView
        android:id="@+id/saved_defense_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/saved_speed_text"
        app:layout_constraintRight_toLeftOf="@id/saved_resist_text"
        app:layout_constraintTop_toBottomOf="@id/name_text" />
    <TextView
        android:id="@+id/saved_resist_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/saved_defense_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_text" />



    <EditText
        android:id="@+id/hp_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:maxLength="3"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/attack_edit"
        app:layout_constraintTop_toBottomOf="@id/saved_hp_text" />

    <EditText
        android:id="@+id/attack_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:maxLength="3"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/hp_edit"
        app:layout_constraintLeft_toRightOf="@id/hp_edit"
        app:layout_constraintRight_toLeftOf="@id/speed_edit"
        app:layout_constraintTop_toTopOf="@id/hp_edit" />

    <EditText
        android:id="@+id/speed_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:maxLength="3"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/hp_edit"
        app:layout_constraintLeft_toRightOf="@id/attack_edit"
        app:layout_constraintRight_toLeftOf="@id/defense_edit"
        app:layout_constraintTop_toTopOf="@id/hp_edit" />

    <EditText
        android:id="@+id/defense_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:maxLength="3"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/hp_edit"
        app:layout_constraintLeft_toRightOf="@id/speed_edit"
        app:layout_constraintRight_toLeftOf="@id/resist_edit"
        app:layout_constraintTop_toTopOf="@id/hp_edit" />

    <EditText
        android:id="@+id/resist_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:maxLength="3"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/hp_edit"
        app:layout_constraintLeft_toRightOf="@id/defense_edit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/hp_edit" />




    <TextView
        android:id="@+id/sum_hp_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/sum_attack_text"
        app:layout_constraintTop_toBottomOf="@id/hp_edit" />
    <TextView
        android:id="@+id/sum_attack_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/sum_hp_text"
        app:layout_constraintRight_toLeftOf="@id/sum_speed_text"
        app:layout_constraintTop_toTopOf="@id/sum_hp_text" />
    <TextView
        android:id="@+id/sum_speed_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/sum_attack_text"
        app:layout_constraintRight_toLeftOf="@id/sum_defense_text"
        app:layout_constraintTop_toTopOf="@id/sum_hp_text" />
    <TextView
        android:id="@+id/sum_defense_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/sum_speed_text"
        app:layout_constraintRight_toLeftOf="@id/sum_resist_text"
        app:layout_constraintTop_toTopOf="@id/sum_hp_text" />
    <TextView
        android:id="@+id/sum_resist_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/sum_defense_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/sum_hp_text" />

    <TextView
        android:id="@+id/memo_text"
        app:layout_constraintTop_toBottomOf="@+id/sum_hp_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/status_bottom_border"
        app:layout_constraintTop_toBottomOf="@id/memo_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#000"
        android:layout_width="0dp"
        android:layout_height="1dp"/>


    <TextView
        android:id="@+id/attack_count_text"
        app:layout_constraintTop_toBottomOf="@id/status_bottom_border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/attack_count_seek"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <SeekBar
        android:id="@+id/attack_count_seek"
        android:progress="1"
        android:max="4"
        app:layout_constraintTop_toTopOf="@id/attack_count_text"
        app:layout_constraintBottom_toBottomOf="@id/attack_count_text"
        app:layout_constraintLeft_toRightOf="@id/attack_count_text"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />


    <CheckBox
        android:id="@+id/advantage_check"
        android:text="3すくみ有利"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/attack_count_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/weakness_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/weakness_check"
        android:text="特攻あり"
        android:textSize="10dp"
        app:layout_constraintTop_toTopOf="@+id/advantage_check"
        app:layout_constraintLeft_toRightOf="@id/advantage_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>