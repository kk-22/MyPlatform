<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@android:color/white"
              android:orientation="vertical"
              android:paddingTop="10dp"
              android:layout_width="250dp"
              android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageButton
            style="@style/HighlightImageButton.HorizontalImageButton"
            android:background="@drawable/search"
            android:id="@+id/search_button"/>

        <ImageButton
            style="@style/HighlightImageButton.HorizontalImageButton"
            android:background="@drawable/add_favorite"
            android:id="@+id/add_bookmark_button"/>

        <ImageButton
            style="@style/HighlightImageButton.HorizontalImageButton"
            android:background="@drawable/script_on"
            android:id="@+id/script_button"/>

        <ImageButton
            style="@style/HighlightImageButton.HorizontalImageButton"
            android:background="@drawable/reload"
            android:id="@+id/reload_button"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:listSelector="@drawable/selector_list"
        android:id="@+id/function_list"/>

</LinearLayout>