<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/cache_button"
        style="@style/CalculatorHeaderText"
        android:background="#0000"
        android:textColor="#888"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/entry_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/entry_text"
        style="@style/CalculatorHeaderText"
        android:text="0"
        android:textColor="#000"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@id/cache_button"
        app:layout_constraintBottom_toTopOf="@+id/total_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/total_text"
        style="@style/CalculatorHeaderText"
        android:text="0"
        android:textColor="#00f"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@id/entry_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>