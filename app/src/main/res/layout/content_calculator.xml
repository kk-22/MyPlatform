<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/result_text"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/entry_text"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/clear_entry_button"
            android:text="CE"
            android:textColor="#00f"
            android:textSize="40sp"
            app:layout_heightPercent="20%"
            app:layout_marginTopPercent="0%"
            app:layout_widthPercent="25%"/>

        <Button
            android:id="@+id/clear_all_button"
            android:text="CA"
            android:textColor="#00f"
            android:textSize="40sp"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginTopPercent="0%"
            app:layout_widthPercent="25%"/>

        <Button
            android:id="@+id/back_button"
            android:text="←"
            android:textColor="#00f"
            android:textSize="40sp"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="50%"
            app:layout_marginTopPercent="0%"
            app:layout_widthPercent="25%"/>

        <Button
            android:id="@+id/divide_button"
            android:text="/"
            android:textColor="#00f"
            android:textSize="40sp"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="75%"
            app:layout_marginTopPercent="0%"
            app:layout_widthPercent="25%"/>

        <Button
            android:id="@+id/seven_button"
            android:text="7"
            android:textColor="#000"
            android:textSize="40sp"
            app:layout_heightPercent="20%"
            app:layout_marginTopPercent="20%"
            app:layout_widthPercent="25%"/>

        <Button
            android:id="@+id/eight_button"
            android:text="8"
            android:textColor="#000"
            android:textSize="40sp"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginTopPercent="20%"
            app:layout_widthPercent="25%"/>

        <Button
            android:id="@+id/nine_button"
            android:text="9"
            android:textColor="#000"
            android:textSize="40sp"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="50%"
            app:layout_marginTopPercent="20%"
            app:layout_widthPercent="25%"/>

        <Button
            android:id="@+id/multiplication_button"
            android:text="×"
            android:textColor="#00f"
            android:textSize="40sp"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="75%"
            app:layout_marginTopPercent="20%"
            app:layout_widthPercent="25%"/>

        <Button
            android:id="@+id/fourbutton"
            android:text="4"
            android:textColor="#000"
            android:textSize="40sp"
            app:layout_heightPercent="20%"
            app:layout_marginTopPercent="40%"
            app:layout_widthPercent="25%"/>

        <Button
            android:id="@+id/five_button"
            android:text="5"
            android:textColor="#000"
            android:textSize="40sp"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginTopPercent="40%"
            app:layout_widthPercent="25%"/>

        <Button
            android:id="@+id/six_button"
            android:text="6"
            android:textColor="#000"
            android:textSize="40sp"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="50%"
            app:layout_marginTopPercent="40%"
            app:layout_widthPercent="25%"/>

        <Button
            android:id="@+id/minus_button"
            android:text="-"
            android:textColor="#00f"
            android:textSize="40sp"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="75%"
            app:layout_marginTopPercent="40%"
            app:layout_widthPercent="25%"/>

        <Button
            android:id="@+id/one_button"
            android:text="1"
            android:textColor="#000"
            android:textSize="40sp"
            app:layout_heightPercent="20%"
            app:layout_marginTopPercent="60%"
            app:layout_widthPercent="25%"/>

        <Button
            android:id="@+id/two_button"
            android:text="2"
            android:textColor="#000"
            android:textSize="40sp"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginTopPercent="60%"
            app:layout_widthPercent="25%"/>

        <Button
            android:id="@+id/three_button"
            android:text="3"
            android:textColor="#000"
            android:textSize="40sp"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="50%"
            app:layout_marginTopPercent="60%"
            app:layout_widthPercent="25%"/>

        <Button
            android:id="@+id/plus_button"
            android:text="+"
            android:textColor="#00f"
            android:textSize="40sp"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="75%"
            app:layout_marginTopPercent="60%"
            app:layout_widthPercent="25%"/>

        <Button
            android:id="@+id/space_button"
            android:text=""
            android:textColor="#000"
            android:textSize="40sp"
            app:layout_heightPercent="20%"
            app:layout_marginTopPercent="80%"
            app:layout_widthPercent="25%"/>

        <Button
            android:id="@+id/zero_button"
            android:text="0"
            android:textColor="#000"
            android:textSize="40sp"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginTopPercent="80%"
            app:layout_widthPercent="25%"/>

        <Button
            android:id="@+id/point_button"
            android:text="."
            android:textColor="#000"
            android:textSize="40sp"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="50%"
            app:layout_marginTopPercent="80%"
            app:layout_widthPercent="25%"/>

        <Button
            android:id="@+id/equal_button"
            android:text="="
            android:textColor="#00f"
            android:textSize="40sp"
            app:layout_heightPercent="20%"
            app:layout_marginLeftPercent="75%"
            app:layout_marginTopPercent="80%"
            app:layout_widthPercent="25%"/>

    </android.support.percent.PercentRelativeLayout>
</LinearLayout>