<resources
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HighlightImageButton">
        <item name="android:src">@drawable/selector_image_button</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="HighlightImageButton.HorizontalImageButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0pt</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Calculator -->
    <style name="CalculatorButton">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">#fff</item>
    </style>
    <style name="CalculatorButton.Number">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="CalculatorButton.Other">
        <item name="android:textColor">#00f</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="CalculatorHeaderText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:ellipsize">start</item>
        <item name="android:gravity">end</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
